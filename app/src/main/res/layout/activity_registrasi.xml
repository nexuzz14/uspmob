<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgreg"
    tools:context=".registrasi">

    <!-- Logo dan Teks -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:orientation="vertical">

        <!-- Logo Image -->

        <!-- Teks Judul -->

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="232dp"
            android:layout_height="103dp"
            android:src="@drawable/usplogo" />


    </LinearLayout>

    <!-- Login Form -->

    <!-- Footer Gambar -->

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/element_rounded_loginregister"
        android:layout_marginTop="230dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <!--email font-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18sp"
            android:textColor="#FFA726"
            android:textStyle="bold"
            android:layout_marginTop="25dp" />

        <!-- Email EditText -->
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="UnStockPhotograph@gmail.com"
            android:textStyle="italic"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <!--Username font-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="18sp"
            android:textColor="#FFA726"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <!--Username EditText -->

        <!--Password font-->

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Username"
            android:inputType="text"
            android:padding="12dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="18sp"
            android:textColor="#FFA726"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <!-- Password EditText -->
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Password"
            android:textStyle="italic"
            android:inputType="textPassword"
            android:padding="12dp" />

        <!-- Register Button -->

        <!-- Register Text -->

        <Button
            android:id="@+id/RegisButton"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:backgroundTint="#FFA726"
            android:text="Register"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/footerImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
